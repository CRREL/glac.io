extends page-wide

block prepend main
  - page.metadata.breadcrumbs = true

block content
  - var tiles = page.metadata.tiles;

  div(style="text-align: center")
    h1= page.title
    p= page.metadata.blurb

  - for (var i = 0; i < tiles.length;)
    - var initial = i;
    .row
      - for (; i < Math.min(tiles.length, initial + 4); i++)
        .col-md-3.tile
          a.thumbnail(href=tiles[i].url)
            if tiles[i].filename
              img(src=tiles[i].filename)
            else
              img(src=contents.scripts.lib["holder.js"].url + "/200x150")
            h4= tiles[i].name
  // TODO include a map of the location

block append scripts
  script(src=contents.scripts.lib["holder.js"].url)
