extends base

block append styles
  link(rel="stylesheet", href=contents.css["dashboard.css"].url)
  if (page.metadata.stylesheet)
    link(rel="stylesheet", href=contents.css[page.metadata.stylesheet].url)

block content
  .navbar.navbar-fixed-top.navbar-inverse(role="navigation")
    .container-fluid
      .navbar-header
        a.navbar-brand(href="/") glac.io
      .navbar-collapse.collapse
        ul.nav.navbar-nav.navbar-right
          li.active
            a(href=contents["hubbard.json"].url) Data
          li
            // a(href=contents["about.md"].url) About
          li
            // a(href=contents["contact.md"].url) Contact

  .container-fluid
    .row
      .col-sm-3.col-md-2.sidebar
        ul.nav.nav-sidebar
          li.active
            a(href=page.url) Hubbard
          li
            a(href="#") Columbia
          li
            a(href="#") Helheim

      .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
        h1.page-header
          = page.metadata.title
        #chart

block append scripts
  script(src=contents.js["d3.min.js"].url)
  if (page.metadata.script)
    script(src=contents.js[page.metadata.script].url)
